    <script>
        function nilaiFaktorial(nilai){
            var hasil=1;
            for(i=1;i<=nilai;i++){
                hasil*=i;
            }
            return hasil;
        }
        console.log(nilaiFaktorial(4));


        function bilPrima(bil){
            for (let index = 1; index <= bil; index++) {
                if(bil==2){
                    console.log("bilangan prima")
                    return true;
                }
                else if(bil%2 == 0 && bil/bil == 1){
                    console.log("bilangan komposit");
                    return false;
                }
                else{
                    console.log("bilangan prima");
                    return true;
                }
            }
        }
        console.log(bilPrima(4));
    </script>
    <input type="text" id="inpt">
